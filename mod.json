{
	"geode": "4.9.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "naxrin.better_pui",
	"name": "Better Platform & Practice Config UI",
	"version": "v3.2.0",
	"developer": "naxrin",
	"description": "Better Platform/Practice Buttons config UI",
	"resources": {
		"sprites": [
			"resources/*"
		]
	},
	"dependencies": {
		"geode.node-ids": {
			"version": "1.20.1",
			"importance": "required"
	    },
		"geode.devtools": {
			"version": "1.10.0",
			"importance":"suggested"
		}
	},
	"settings": {
		"bg-title": {
			"name": "Background",
			"description": "Modify your background (if you really need?)",
			"type": "title"
		},
		"bg-color": {
			"name": "Background Color",
			"description": "Im so curious what makes you hate the default black background?",
			"type": "color",
			"default": "000000"
		},
        "bg-opacity": {
			"name": "Background Opacity",
			"description": "0~100 Default to 85",
			"type": "int",
			"default": 85,
			"max": 100,
			"min": 0,
			"control": {
				"input": true,
				"slider-step": 1
			}
		},
		"slot-color": {
			"name": "Slot Color",
			"description": "If you really need...",
			"type": "rgba",
			"default": "FFFFFF32"
		},
		"grid-title": {
			"name": "Grid Options",
			"description": "Modify your Grid Options",
			"type": "title"
		},
		"hori-distance": {
			"name": "Horizental Grid Distance",
			"description": "Distance between two nearby vertical grid lines. Will not affect existing buttons' placement",
			"type": "int",
			"max": 50,
			"min": 5,
			"default": 30,
			"control": {
				"slider": true,
				"arrows": true,
				"arrow-step": 5,
				"input": true
			}
		},
		"vert-distance": {
			"name": "Vertical Distance",
			"description": "Distance between two nearby horizental grid lines. Will not affect existing buttons' placement",
			"type": "int",
			"max": 50,
			"min": 5,
			"default": 30,
			"control": {
				"slider": true,
				"arrows": true,
				"arrow-step": 5,
				"input": true
			}
		}
	}
}
